    public static char bengaliToArabic(char bengaliNumeral) {
        return (char) (bengaliNumeral - '০' + '0');
    }
 
    public static int bengaliToInt(char bengaliNumeral) {
        return Character.getNumericValue(bengaliNumeral);
    }
   
