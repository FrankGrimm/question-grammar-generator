@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .
@prefix owl:     <http://www.w3.org/2002/07/owl#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
            lemon:language "en" ;
            lemon:entry    :official ;
            lemon:entry    :official_res .

:official a              lemon:LexicalEntry ;
        lexinfo:partOfSpeech lexinfo:adjective ;
        lemon:canonicalForm  :official_canonical_form ;
        lemon:sense          :official_sense ;
        lemon:synBehavior    :official_syn, :official_syn1 .

:official_canonical_form lemon:writtenRep "official"@en .

:official_res a    owl:Restriction ;
            owl:onProperty <http://dbpedia.org/ontology/language> ;
            owl:hasValue   <http://dbpedia.org/property/official> .

:official_sense a   lemon:LexicalSense ;
              lemon:reference :official_res ;
              lemon:isA       :official_arg .

:official_syn a               lexinfo:AdjectivePredicateFrame ;
            lexinfo:copulativeSubject :official_arg .

:official_syn1 a           lexinfo:AdjectiveAttributiveFrame ;
             lexinfo:attributiveArg :official_arg .
