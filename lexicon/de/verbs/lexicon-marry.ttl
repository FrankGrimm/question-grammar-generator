@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_de a    lemon:Lexicon ;
  lemon:language "de" ;
  lemon:entry    :heiraten ;
  lemon:entry    :verheiratet ;
  lemon:entry    :mit .

:heiraten a            lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_heiraten ;
  lemon:otherForm      :form_heiratete ;
  lemon:synBehavior    :heiraten_frame_transitive ;
  lemon:sense          :heiraten_ontomap .

:form_heiraten a          lemon:Form ;
  lemon:writtenRep     "heiraten"@de ;
  lexinfo:verbFormMood lexinfo:infinitive .

:form_heiratete a    lemon:Form ;
  lemon:writtenRep "heiratete"@de ;
  lexinfo:tense    lexinfo:past .

:heiraten_frame_transitive a lexinfo:TransitiveFrame ;
  lexinfo:subject         :heiraten_subj ;
  lexinfo:directObject    :heiraten_obj .

:heiraten_ontomap a    lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :heiraten_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/spouse> ;
  lemon:subjOfProp  :heiraten_subj ;
  lemon:objOfProp   :heiraten_obj ;
  lemon:condition   :heiraten_condition .

:heiraten_condition a     lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Person> .

#see https://lemon-model.net/lemon-cookbook/node17.html

:verheiratet a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_verheiratet_canonical ;
  lemon:otherForm      :form_verheiratet_mit ;
  lemon:synBehavior    :verheiratet_frame_adjectivepp ;
  lemon:sense          :verheiratet_ontomap .

:form_verheiratet_canonical a lemon:Form ;
  lemon:writtenRep        "verheiratet"@de .

:form_verheiratet_mit a     lemon:Form ;
  lemon:writtenRep     "verheiratet"@de ;
  lexinfo:verbFormMood lexinfo:participle .

:verheiratet_frame_adjectivepp a   lexinfo:AdjectivePPFrame ;
  lexinfo:copulativeSubject    :verheiratet_subj ;
  lexinfo:prepositionalAdjunct :verheiratet_obj .

:verheiratet_ontomap a  lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :verheiratet_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/spouse> ;
  lemon:subjOfProp  :verheiratet_obj ;
  lemon:objOfProp   :verheiratet_subj ;
  lemon:condition   :heiraten_condition .

:verheiratet_obj lemon:marker :mit .

## Prepositions ##

:mit a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "mit"@de ] ;
  lexinfo:partOfSpeech lexinfo:preposition .
